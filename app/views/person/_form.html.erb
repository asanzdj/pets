<div>
  <% if @person.errors.any? %>
    <% pluralize(@person.errors.count, "error") %>
      <% @person.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger" role="alert">
        <strong>Â¡Oh no!</strong> <%= msg %>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="form">
      <div class="form-group row">
        <%= f.label :name, "Nombre*: ", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", type: 'text'%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :surname, "Apellidos*: ", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :surname, class: "form-control", type: 'text'%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, "Email*: ", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :email, class: "form-control", type: 'email'%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :dni, "DNI*: ", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :dni, class: "form-control", type: 'text', minlength: "9", maxlength: "9"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :picture, "Imagen: ", class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.file_field :picture, class: "form-control-file", accept: ".png, .jpeg, .jpg, .gif" %>
        <small id="fileHelp" class="form-text text-muted">Permited extensions: .png, .jpeg, .jpg, .gif</small>
        </div>
      </div>
      <%= f.hidden_field :login, value: current_user.login %>
      <small>Tags with * symbol are required.</small>
      <center>
      <%= f.submit 'Guardar', class: "btn btn-outline-success" %>
      </center>
  </div>
</div>
